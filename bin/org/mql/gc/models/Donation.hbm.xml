<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping>
	<class name="org.mql.gc.models.Donation" table="donation">
		<id name="id" column="id" type="int">
			<generator class="increment"/>
		</id>
		<property name="idCase" column="idCase" type="int"/>
		<property name="idUser" column="idUser" type="int"/>
		<property name="cost" column="cost" type="double"/>
		<property name="numBC" column="numBC" type="string"/>
		<property name="expirationDate" column="expirationDate" type="date"/>
		<property name="ccv" column="ccv" type="string"/>
		<property name="addedDate" column="addedDate" type="timestamp"/>
	</class>
</hibernate-mapping>


