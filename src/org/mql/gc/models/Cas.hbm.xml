<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping>
	<class name="org.mql.gc.models.Cas" table="cas">
		
		<id name="id" column="id" type="int">
		<generator class="increment"/>
		</id>
		<property name="idAssociation" column="idAssociation" />
		<property name="titre" column="titre" type="string"/>
		<property name="slogan" column="slogan" type="string"/>
		<property name="ville" column="ville"  type="string"/>
		<property name="categorie" column="categorie" type="string"/>
		<property name="autreCategorie" column="autrecategorie" type="string"/>
		<property name="duree" column="duree" type="int"/>
		<property name="cout" column="cout" type="double"/>
		<property name="description" column="description" type="string"/>
		<property name="date_ajout" column="date_ajout" type="timestamp"/>
		<property name="fileContent1" column="filecontent1" type="string"/>
		<property name="fileContent2" column="filecontent2" type="string"/>
		<property name="fileContent3" column="filecontent3" type="string"/>
		<property name="fileContentI" column="filecontentI" type="string"/>
		<property name="fileContentV" column="filecontentV" type="string"/>
		<property name="fileName1" column="fileName1" type="string"/>
		<property name="fileName2" column="fileName2" type="string"/>
		<property name="fileName3" column="fileName3" type="string"/>
		<property name="pending" column="pending" type="boolean"/>
	</class>
</hibernate-mapping>